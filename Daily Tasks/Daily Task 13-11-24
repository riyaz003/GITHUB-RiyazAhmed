<html>
    <body>
        <script>
            var day=prompt("Enter Any Number from 1 To 7");
            switch(day){
                case '1':document.write("Selected Day Is SUNDAY");
                break;
                case '2':document.write("Selected Day Is MONDAY");
                break;
                case '3':document.write("Selected Day Is TUESDAY");
                break;
                case '4':document.write("Selected Day Is WEDNESDAY");
                break;
                case '5':document.write("Selected Day Is THURSDAY");
                break;
                case '6':document.write("Selected Day Is FRIDAY");
                break;
                case '7':document.write("Selected Day Is SATURDAY");
                break;
                default:document.write("Please Enter A Valid Number!")
                
                
            }
        </script>
    </body>
</html>
